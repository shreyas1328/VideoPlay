<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outside border/shadow -->
    <item>
        <shape android:shape="oval">
            <size android:width="200dp" android:height="200dp" />
            <gradient android:angle="90" android:startColor="#b9b9b9" android:endColor="#b9b9b9" />
        </shape>
    </item>

    <!-- Inset -->
    <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="1dp">
        <shape android:shape="oval">
            <gradient android:angle="90" android:startColor="#c9c9c9" android:endColor="#c9c9c9" />
        </shape>
    </item>

    <!--&lt;!&ndash; Inside border/shadow &ndash;&gt;-->
    <item android:top="3dp" android:left="3dp" android:right="3dp" android:bottom="3dp">
        <shape android:shape="oval">
            <gradient android:angle="90" android:startColor="#8c8c8c" android:endColor="#8c8c8c" />
        </shape>
    </item>

    <!-- Main button -->
    <item android:top="5dp" android:left="5dp" android:right="5dp" android:bottom="5dp">
        <shape android:shape="oval">
            <solid android:color="#f4f4f4" />
        </shape>
    </item>

</layer-list>